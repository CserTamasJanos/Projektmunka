@model RoboCop5.Models.Navbar
<nav class="navbar navbar-default ms-auto">

    <div class="container-fluid">

        <img src="~/Content/Images/Logo2.JPG" alt="Logo" height="80" class="d-inline-block align-text-top" />

        @if (Model == null || Model.UsersMenus.Count == 0)
        {
            <div class="navbar-nav ms-auto d-inline-block">
                <button class="btn btn-outline-default my-2 my-sm-0 keycolor" type="submit">
                    @Html.ActionLink("Regisztráció", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })
                </button>

                <button class="btn btn-outline-default my-2 my-sm-0" type="submit">
                    @Html.ActionLink("Bejelentkezés", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "nav-link" })
                </button>
            </div>
        }
        else
        {

            <ul class="navbar-nav ms-auto d-inline-block">

                @foreach (var a in Model.UsersMenus)
                 {
                    <li class="nav-item my-2 my-sm-0 mb-lg-0" style="padding-left:10px;"><a class="nav-link my-2 my-sm-0 mb-lg-0" href="@a.MPATH">@a.MTEXT</a>  </li>
                 }
                <li class="nav-item my-2 my-sm-0 mb-lg-0" style="padding-left:10px;"><a class="nav-link my-2 my-sm-0 mb-lg-0" href="">Új Szűrés</a></li>
                <li class="nav-item my-2 my-sm-0 mb-lg-0" style="padding-left:10px;"><a class="nav-link my-2 my-sm-0 mb-lg-0" href="">LogOff</a></li>
            </ul>
        }

    </div>

</nav>
